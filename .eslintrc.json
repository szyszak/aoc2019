{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "no-console": "off",
    "no-plusplus": "off",
    "no-restricted-syntax": "off",
    "no-unused-expressions": ["warn", { "allowTernary": true }],
    "no-shadow": "off",
    "arrow-parens": "off",
    "max-len": ["error", { "ignoreComments": true, "ignoreStrings": true }]
  }
}
